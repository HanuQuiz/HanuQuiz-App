{% extends "pages/abstract/dashboard.html.twig" %}

{% block stylesheets_page %}
    <!-- Page-specific CSS asset bundle -->
    {{ assets.css('css/form-widgets') | raw }}
{% endblock %}

{# Overrides blocks in head of base template #}
{% block page_title %}{{ translate("QUIZ", 2)}}{% endblock %}

{% block page_description %}{{ translate("QUIZ.PAGE_DESCRIPTION")}}{% endblock %}

{% block body_matter %}
    <div class="row">
        <div class="col-md-12">
            <div id="widget-quiz" class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title pull-left"><i class="fa fa-fw fa-file-text"></i> {{translate('QUIZ', 2)}}</h3>
                    {% include "tables/table-tool-menu.html.twig" %}
                </div>
                <div class="box-body">
                    {% include "tables/quiz_list.html.twig" with {
                            "table" : {
                                "id" : "table-quiz"
                            }
                        }
                    %}
                </div>
                {% if checkAccess('create_quiz') %}
                <div class="box-footer">
                    <button type="button" class="btn btn-success js-quiz-create">
                        <i class="fa fa-plus-square"></i>  {{ translate("QUIZ.CREATE")}}
                    </button>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts_page %}
    <!-- Include validation rules -->
    <script>
    {% include "pages/partials/page.js.twig" %}
    </script>

    <!-- Include form widgets JS -->
    {{ assets.js('js/form-widgets') | raw }}

    <!-- Include page-specific JS -->
    {{ assets.js('js/pages/quizlist') | raw }}

{% endblock %}