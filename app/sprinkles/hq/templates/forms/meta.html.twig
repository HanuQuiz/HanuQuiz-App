<form class="js-form" method="{{form.method | default('POST')}}" action="{{site.uri.public}}/{{form.action}}">
    {% include "forms/csrf.html.twig" %}
    <div class="js-form-alerts">
    </div>
    <div class="row">
        {% block app_form %}
            <div class="col-sm-12">
                <div class="form-group">
                    <label>{{translate("QUESTION.ID")}}</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit fa-fw"></i></span>
                        <input type="text" class="form-control" name="question_id" autocomplete="off" value="{{question_id}}" readonly="X">
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="form-group">
                    <label>{{translate("QUESTION.META.KEY")}}</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit fa-fw"></i></span>
                        <input type="text" class="form-control" name="meta_key" autocomplete="off" value="{{meta.meta_key}}" placeholder="{{translate("QUESTION.META.KEY")}}">
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>{{translate("QUESTION.META.VALUE")}}</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-edit fa-fw"></i></span>
                        <input type="text" class="form-control" name="meta_value" autocomplete="off" value="{{meta.meta_value}}" placeholder="{{translate("QUESTION.META.VALUE")}}">
                    </div>
                </div>
            </div>
            
        {% endblock %}
    </div><br>
    <div class="row">
        <div class="col-xs-6 col-sm-4">
            <button type="submit" class="btn btn-block btn-lg btn-success">{{form.submit_text}}</button>
        </div>
        <div class="col-xs-4 col-sm-3 pull-right">
            <button type="button" class="btn btn-block btn-lg btn-link" data-dismiss="modal">{{translate("CANCEL")}}</button>
        </div>
    </div>
</form>
<!-- Include validation rules -->
<script>
{% include "pages/partials/page.js.twig" %}
</script>
